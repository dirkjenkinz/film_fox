{% extends 'paperwork/paperwork.njk' %}
{% block page %}

  <div class='row'>
    <table>
      <!-- Add a table tag here -->
      <tr>
        <td colspan='4' style='color: white;'>
          &nbsp;&nbsp;<b>SCENE:
            <span id='output'>{{sceneNumber}}:-
              {{scene[0].dialogue}}</span></b>
        </td>
      </tr>
    </table>
    <div class='col-md-12 slidecontainer'>
      <input type='range' min='0' max='{{size}}' value='{{sceneNumber}}' id='slider-scene'>
    </div>
    <br><br>
  </div>

  <div class='row'>
    <div class='col-md-4'>
      {% if sceneNumber > 0 %}
        <button id='btn-previous'>
          Previous Scene
        </button>
      {% else %}
        <button id='btn-previous' disabled='disabled'>
          Previous Scene
        </button>
      {% endif %}
    </div>
    <div class='col-md-4'>
      &nbsp;
    </div>
    <div class='col-md-4'>
      {% if sceneNumber < highestScene %}
        <button id='btn-next'>
          Next Scene
        </button>
      {%else %}
        <button id='btn-next' disabled='disabled'>
          Next Scene
        </button>
      {% endif %}
    </div>
  </div>

  <div class='row top' style='background: white;'>
    <p id='size' hidden='hidden'>{{size}}</p>
    <div class='row tableFixHead' id='tabhead'>
      <div class='col-md-12'>
        <table id='table-header' style='background: black;'>
          <tbody>
            <!-- Change </body> to </tbody> -->
            {% for i in range(0, breakdown.length) -%}
              <tr>
                <th width='20%'>
                  {{breakdown[i][0]}}
                </th>
                <td>
                  {% for j in range(1, breakdown[i].length) -%}
                    {% if j === breakdown[i].length - 1 %}
                      {{breakdown[i][j]}}
                    {% else %}
                      {{breakdown[i][j]}},&nbsp;
                    {% endif %}
                  {% endfor %}
                </td>
              </tr>
            {% endfor %}
          </tbody>
          <!-- Add this closing tag -->
        </table>
      </div>
    </div>
  </div>
  <script src='../js/paperwork/paperwork.js'></script>
  <script src='../js/paperwork/breakdown-report.js'></script>
{% endblock %}